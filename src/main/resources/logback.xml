<configuration>
    <logger name="org.eclipse.jgit" level="OFF"/>

    <root level="ALL">
        <appender class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <pattern>[%date{HH:mm:ss}] %highlight(%-5level) %15logger{0} | %m%n</pattern>
            </encoder>
        </appender>
    </root>
</configuration>
